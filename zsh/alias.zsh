# Git
alias gac="git commit -a -m"
alias gaC="git add . && git commit -m"
alias gb="git branch"
alias gs="git switch"
alias gsc="git switch -c"
alias gr="git reset"
alias gbd="git branch -d"
alias gbD="git branch -D"
alias gca="git commit --amend"
alias gcam="git commit --amend -m"
